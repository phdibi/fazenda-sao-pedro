// Copie este conteÃºdo para o Console do Firebase:
// Firebase Console > Firestore Database > Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // REGRA BASE: UsuÃ¡rio autenticado
    // ============================================
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // ============================================
    // ANIMAIS
    // ============================================
    match /animals/{animalId} {
      // Leitura: apenas dono
      allow read: if isOwner(resource.data.userId);
      
      // CriaÃ§Ã£o: usuÃ¡rio autenticado, deve ter userId
      allow create: if isAuthenticated() 
                    && request.resource.data.userId == request.auth.uid;
      
      // AtualizaÃ§Ã£o: apenas dono
      allow update: if isOwner(resource.data.userId);
      
      // DeleÃ§Ã£o: apenas dono
      allow delete: if isOwner(resource.data.userId);
    }
    
    // ============================================
    // CALENDÃRIO
    // ============================================
    match /calendar/{eventId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isAuthenticated() 
                    && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.userId);
    }
    
    // ============================================
    // TAREFAS
    // ============================================
    match /tasks/{taskId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isAuthenticated() 
                    && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.userId);
    }
    
    // ============================================
    // ÃREAS DE MANEJO
    // ============================================
    match /areas/{areaId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isAuthenticated() 
                    && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.userId);
    }
    
    // ============================================
    // LOTES (BATCHES)
    // ============================================
    match /batches/{batchId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isAuthenticated() 
                    && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.userId);
    }
    
    // ============================================
    // BLOQUEIA ACESSO A OUTRAS COLEÃ‡Ã•ES
    // ============================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

